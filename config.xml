<?xml version='1.0' encoding='utf-8'?>
<widget id="com.chijioke.webbundler" version="1.0.0" 
    xmlns="http://www.w3.org/ns/widgets" 
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <name>Web Bundler Pro</name>
    <description>Bundle Localhost Websites to Single HTML</description>
    <content src="index.html" />
    
    <!-- NETWORK PERMISSIONS -->
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    
    <!-- PREFERENCES -->
    <platform name="android">
        <!-- Allow accessing file:/// and http://localhost -->
        <preference name="AndroidInsecureFileModeEnabled" value="true" />
        <preference name="MixedContentMode" value="0" /> <!-- 0 = Always Allow -->
        <preference name="AndroidXEnabled" value="true" />
        
        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
            <uses-permission android:name="android.permission.INTERNET" />
            <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
        </config-file>

        <!-- ALLOW CLEAR TEXT (HTTP) TRAFFIC -->
        <edit-config file="app/src/main/AndroidManifest.xml" target="/manifest/application" mode="merge">
            <application android:usesCleartextTraffic="true" android:requestLegacyExternalStorage="true" />
        </edit-config>
    </platform>

    <!-- PLUGINS -->
    <plugin name="cordova-plugin-file" spec="^8.0.0" />
    <plugin name="cordova-plugin-android-permissions" spec="^1.1.5" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.4" />
</widget>